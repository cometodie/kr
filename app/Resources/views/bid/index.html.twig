{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bids list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Category</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bid in bids %}
            <tr>
                <td><a href="{{ path('bid_show', { 'id': bid.id }) }}">{{ bid.id }}</a></td>
                <td>{{ bid.text }}</td>
                <td>{{ bid.category }}</td>
                <td>{{ bid.date.format('y-d-m') }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="bblack" href="{{ path('bid_show', { 'id': bid.id }) }}">show</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a class="bblack" href="{{ path('bid_edit', { 'id': bid.id }) }}">edit</a>
                            </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="bblack" href="{{ path('bid_new') }}">Create a new bid</a>
        </li>
    </ul>
{% endblock %}
