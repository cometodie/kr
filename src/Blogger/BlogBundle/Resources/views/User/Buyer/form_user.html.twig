    {{ form_widget(form.phone, {'attr': {'class':'form-control form-field', 'id': 'phone', 'placeholder': 'Введите телефон'}}) }}
</div>
<div class="form-group">
    {{ form_widget(form.city, {'attr': {'class':'form-control form-field', 'id': 'city', 'placeholder': 'Введите город'}}) }}
