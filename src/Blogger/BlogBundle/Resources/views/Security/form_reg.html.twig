{{ form_start(form, { 'action': path('user_reg'), 'method': 'POST'}) }}
<div class="form-group">
    {{ form_errors(form) }}
    {{ form_widget(form.username, {'attr': {'class':'form-control form-field', 'id': 'username', 'placeholder': 'input username'}}) }}
</div>
<div class="form-group">
    {{ form_widget(form.password, {'type': 'password', 'attr': {'type': 'password', 'class':'form-control form-field', 'id': 'username', 'placeholder': 'input password'}}) }}
</div>
<div class="form-group">
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Отправить"/>
</div>

{{ form_end(form) }}